{
  "globals": {
    "ts-jest": {
      "tsconfig": "<rootDir>/tsconfig.json"
    }
  },
  "moduleDirectories": [
    "node_modules",
    "src"
  ],
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "testEnvironment": "node",
  "testMatch": [
    "<rootDir>/**/*.spec.ts"
  ],
  "transform": {
    "^.+\\.(js|ts|tsx)$": "ts-jest"
  },
  "preset": "ts-jest/presets/js-with-ts"
}
